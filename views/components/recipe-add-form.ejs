<h2>Ajoutez une recette</h2>
<p>Remplissezle formulaire suivant et clquez sur 'Ajouter'.</p>
<section id="addRecipePage">

    <form action="" id="addRecipeForm">
        <fieldset>
            <legend>Description de la recette</legend>
            <label for="recipeTitle">Titre</label>
            <input type="text" id="recipeTitle">
            <label for="recipeDesc">Description</label>
            <textarea id="recipeDesc"></textarea>
        </fieldset>

        <fieldset>
            <legend>Ingr√©dients de la recette</legend>

            <ul id="fromIngredientList">
                <% for(ingredient of data) { %>
                    <li>
                        <span>
                            <input type="checkbox" class="checkboxIngredient" value="<%= ingredient.title %>"> 
                            <%= ingredient.title %>
                        </span>
                        <input type="text" data-id="<%= ingredient._id %>">
                    </li>
                <% } %>
            </ul>
            
        </fieldset>

        <input type="submit" value="Ajouter">
    </form>
    
</section>

<script src="/js/recipe-add-form.js"></script>